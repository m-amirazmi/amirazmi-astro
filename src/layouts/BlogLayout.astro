---
import Header from "../components/Header.astro";
import BaseHead from "../components/BaseHead.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Blog Page"
      description="A page to display all our blog posts"
    />
  </head>
  <body>
    <div class="layout">
      <h1>{title}</h1>
      <Header />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
