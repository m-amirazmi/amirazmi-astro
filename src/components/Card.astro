---
import Tag from "./Tag.astro";
import Text from "./Text.astro";
export interface Props {
	title: string;
	subtitle?: string;
	summary?: string;
	tags?: string[];
}
const { title, summary, subtitle, tags = [] } = Astro.props as Props;
---

<figure class="card">
	<Text tag="h3" size="md" weight="bold" class="card-title">{title}</Text>
	<Text tag="p" size="xs" class="card-subtitle">{subtitle}</Text>
	{tags.length > 0 && tags.map((tag) => <Tag>{tag}</Tag>)}
	<Text tag="p" class="text-truncate">{summary}</Text>
	<slot />
</figure>
