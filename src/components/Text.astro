---
export interface Props {
  tag?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" | "span" | "a";
  size?: "xs" | "sm" | "md" | "lg" | "xl" | "2xl" | "3xl" | "4xl";
  weight?: "thin" | "regular" | "semibold" | "bold";
  href?: string;
  target?: "_blank" | "_self";
  class?: string;
  uppercase?: boolean;
  lowercase?: boolean;
  capitalize?: boolean;
  ariaLabel?: string;
}

const {
  tag = "p",
  size,
  class: c,
  weight = "regular",
  uppercase,
  lowercase,
  capitalize,
  href,
  target,
  ariaLabel,
} = Astro.props as Props;
const Component = tag;

const fontSizesDefault = {
  h1: "3xl",
  h2: "2xl",
  h3: "xl",
  h4: "lg",
  h5: "md",
  h6: "sm",
  p: "sm",
  span: "sm",
};

const fontSize = !size ? fontSizesDefault[tag] : size;

const classes = `text text-${fontSize} font-${weight} ${
  uppercase ? "uppercase" : ""
} ${lowercase ? "lowercase" : ""} ${capitalize ? "capitalize" : ""} ${c || ""}`;

const attrs = {
  href,
  target,
  "aria-label": ariaLabel,
};
---

<Component {...attrs} class:list={[classes]}><slot /></Component>
