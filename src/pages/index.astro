---
import Layout from "@/layouts/layout.astro";
import Hero from "@/components/hero";
import PostList from "@/components/post-list";
import type { IPost } from "@/lib/types";
import { filterAndSortedPostList } from "@/lib/utils";
const posts = await Astro.glob("../pages/**/*.mdx");
const postsFrontmatter: IPost[] = posts.map((i)=> i.frontmatter as IPost)
const getPosts = filterAndSortedPostList(postsFrontmatter, 3)
---

<Layout title="Welcome to my personal space!">
  <Hero/>
  <PostList title="All Articles" posts={getPosts}/>
</Layout>
