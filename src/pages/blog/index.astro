---
import Layout from "@/layouts/layout.astro";
import PostList from "@/components/post-list";
import PageTitle from "@/components/page-title";
import type { IPost } from "@/lib/types";
import { filterAndSortedPostList } from "@/lib/utils";
const posts = await Astro.glob("../../pages/**/*.mdx");
const postsFrontmatter: IPost[] = posts.map((i)=> i.frontmatter as IPost)
const getPosts = filterAndSortedPostList(postsFrontmatter)
---

<Layout title="All my article are here...">
  <PageTitle title="Blog"/>
  <PostList posts={getPosts}/>
</Layout>
